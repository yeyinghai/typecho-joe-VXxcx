/* pages/splash/splash.wxss */
.splash-container {
  width: 100vw;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

/* 开门效果 - 两扇门 */
.door {
  position: fixed;
  top: 0;
  width: 50vw;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  z-index: 1000;
  transition: transform 1s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  box-shadow: 0 0 60rpx rgba(255, 255, 255, 0.3);
  opacity: 0;
  pointer-events: none;
}

.door-left {
  left: 0;
  transform-origin: left;
}

.door-right {
  right: 0;
  transform-origin: right;
}

/* 开门动画 */
.door.opening {
  opacity: 1;
  animation: doorFadeIn 0.1s ease-out forwards;
}

.door-left.opening {
  transform: translateX(-100%);
}

.door-right.opening {
  transform: translateX(100%);
}

@keyframes doorFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 发光效果 */
.glow-effect {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 200rpx;
  height: 200rpx;
  transform: translate(-50%, -50%) scale(0);
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.5) 30%, transparent 70%);
  z-index: 999;
  opacity: 0;
  transition: all 0.8s ease-out;
  pointer-events: none;
}

.glow-effect.active {
  transform: translate(-50%, -50%) scale(15);
  opacity: 1;
}

/* 背景装饰 */
.splash-container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 500rpx;
  height: 500rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.splash-container::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -10%;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.splash-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: fadeInUp 0.8s ease-out;
}

/* Logo */
.logo-wrapper {
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 60rpx;
  animation: pulse 2s infinite;
}

.logo {
  width: 160rpx;
  height: 160rpx;
}

/* 应用名称 */
.app-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 20rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 应用描述 */
.app-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 120rpx;
  text-align: center;
  padding: 0 60rpx;
  line-height: 1.6;
}

/* 进入按钮 */
.enter-btn {
  padding: 28rpx 100rpx;
  background: rgba(255, 255, 255, 0.95);
  color: #667eea;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 60rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.enter-btn:active {
  transform: scale(0.95);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
}

/* 底部 */
.splash-footer {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 动画 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}
