/* pages/links/links.wxss */
.links-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 32rpx;
}

/* 页面头部 */
.links-header {
  text-align: center;
  margin-bottom: 60rpx;
  color: #fff;
}

.header-title {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-desc {
  font-size: 14px;
  opacity: 0.9;
}

/* 区域标题 */
.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #fff;
  margin-bottom: 24rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 我的站点信息 */
.my-site-section {
  margin-bottom: 48rpx;
}

.my-site-card {
  background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.my-site-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 32rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
  flex-shrink: 0;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.my-site-info {
  flex: 1;
  min-width: 0;
}

.my-site-name {
  font-size: 20px;
  font-weight: 700;
  color: #2d3436;
  margin-bottom: 12rpx;
}

.my-site-url {
  font-size: 13px;
  color: #636e72;
  margin-bottom: 16rpx;
  word-break: break-all;
}

.my-site-description {
  font-size: 14px;
  color: #2d3436;
  line-height: 1.6;
}

.copy-btn-group {
  display: flex;
  gap: 16rpx;
}

.copy-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 14px;
  font-weight: 600;
  color: #667eea;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.copy-btn::after {
  border: none;
}

.copy-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.btn-icon {
  margin-right: 8rpx;
  font-size: 16px;
}

/* 友链列表区域 */
.links-section {
  margin-bottom: 48rpx;
}

/* 友链列表 */
.links-list {
  display: grid;
  gap: 24rpx;
}

.link-card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.link-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
}

/* 头像 */
.link-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 4rpx solid #f0f0f0;
  flex-shrink: 0;
}

/* 信息 */
.link-info {
  flex: 1;
  min-width: 0;
}

.link-name {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.link-description {
  font-size: 13px;
  color: #666;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.link-url {
  font-size: 12px;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 箭头 */
.link-arrow {
  font-size: 24px;
  color: #667eea;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 申请友链提示 */
.apply-tip {
  margin-top: 60rpx;
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  text-align: center;
}

.tip-text {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.tip-desc {
  font-size: 13px;
  color: #666;
  line-height: 1.6;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 80rpx 40rpx;
  color: rgba(255, 255, 255, 0.9);
  font-size: 14px;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: rgba(255, 255, 255, 0.9);
}

.empty-icon {
  font-size: 64px;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 14px;
}
