/* pages/tag-posts/tag-posts.wxss */
.tag-posts-container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 标签头部 */
.tag-header {
  padding: 40rpx 32rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.tag-title {
  font-size: 24px;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.tag-count {
  font-size: 14px;
  opacity: 0.9;
}

/* 文章列表 */
.posts-list {
  padding: 20rpx;
}

.post-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.post-item:active {
  transform: scale(0.98);
}

.post-thumbnail {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.post-body {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.post-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.post-excerpt {
  font-size: 13px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.post-meta {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
  gap: 16rpx;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 64px;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 14px;
  color: #999;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 14px;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #ccc;
  font-size: 13px;
}
