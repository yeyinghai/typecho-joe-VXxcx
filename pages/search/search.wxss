/* pages/search/search.wxss */
.search-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 80rpx; /* 为底部菜单栏留出较小的空间 */
}

/* 搜索框 */
.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-input-wrapper {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
}

.search-input {
  width: 100%;
  height: 72rpx;
  padding: 0 100rpx 0 32rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  font-size: 14px;
}

.clear-btn {
  position: absolute;
  right: 88rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ccc;
  border-radius: 50%;
  color: #fff;
  font-size: 14px;
  z-index: 10;
}

.clear-btn:active {
  background: #999;
}

.search-icon-btn {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  font-size: 20px;
  z-index: 5;
  transition: all 0.3s;
}

.search-icon-btn:active {
  transform: translateY(-50%) scale(0.9);
  opacity: 0.8;
}

/* 搜索历史 */
.search-history {
  padding: 32rpx;
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.history-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.history-clear {
  font-size: 13px;
  color: #999;
  padding: 8rpx 16rpx;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-item {
  padding: 16rpx 32rpx;
  background: #fff;
  border-radius: 36rpx;
  font-size: 13px;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.history-item:active {
  transform: scale(0.95);
  transition: transform 0.2s;
}

/* 最新文章 */
.latest-posts {
  padding: 32rpx;
}

.latest-header {
  margin-bottom: 24rpx;
}

.latest-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.latest-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.latest-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
  min-height: 120rpx;
}

.latest-item:active {
  transform: scale(0.98);
}

.latest-thumbnail {
  width: 200rpx;
  height: 150rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

.latest-content {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.latest-content.full-width {
  width: 100%;
}

.latest-title-text {
  font-size: 15px;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.5;
}

.latest-meta {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
}

/* 搜索结果 */
.search-results {
  padding: 32rpx;
}

.results-header {
  font-size: 14px;
  color: #666;
  margin-bottom: 24rpx;
}

.highlight {
  color: #667eea;
  font-weight: 600;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.result-item:active {
  transform: scale(0.98);
  transition: transform 0.2s;
}

.result-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.result-excerpt {
  font-size: 13px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.result-meta {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 64px;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 16px;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 13px;
  color: #999;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
  font-size: 14px;
}

.loading-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 13px;
}

.no-more {
  text-align: center;
  padding: 20rpx;
  color: #ccc;
  font-size: 13px;
}
