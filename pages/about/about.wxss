/* pages/about/about.wxss */
.about-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 个人信息区域 */
.profile-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  color: #fff;
}

/* 关于项目按钮 */
.project-btn-section {
  padding: 0 32rpx;
  margin-top: -20rpx;
  margin-bottom: 24rpx;
}

.project-btn {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.project-btn:active {
  transform: scale(0.98);
  transition: transform 0.2s;
}

.project-btn-icon {
  font-size: 20px;
  margin-right: 16rpx;
}

.project-btn-text {
  font-size: 15px;
  color: #333;
  font-weight: 500;
  margin-right: 12rpx;
}

.project-btn-hand {
  font-size: 16px;
  animation: point 1s ease-in-out infinite;
}

@keyframes point {
  0%, 100% {
    transform: translateX(0);
  }
  50% {
    transform: translateX(8rpx);
  }
}

.profile-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.9);
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.profile-name {
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.profile-description {
  font-size: 14px;
  opacity: 0.9;
  line-height: 1.6;
}

/* 统计区域 */
.stats-section {
  background: #fff;
  margin: -40rpx 32rpx 24rpx;
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 22px;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 8rpx;
}

/* 访客数量颜色 - 根据数量区间显示不同颜色 */
.views-low {
  color: #999;  /* 灰色 - 0-99 */
}

.views-normal {
  color: #52c41a;  /* 绿色 - 100-999 */
}

.views-medium {
  color: #fa8c16;  /* 橙色 - 1000-9999 */
}

.views-high {
  color: #f5222d;  /* 红色 - 10000+ */
}

.stat-label {
  font-size: 12px;
  color: #999;
}

/* 功能按钮区域 */
.actions-section {
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}

.actions-row {
  display: flex;
  gap: 24rpx;
}

.action-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.action-card:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.action-card .action-icon {
  font-size: 40px;
  margin-bottom: 16rpx;
}

.action-card .action-text {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}

/* 联系方式区域 */
.contacts-section {
  padding: 0 32rpx;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.contacts-grid {
  display: grid;
  gap: 16rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.contact-item:active {
  transform: scale(0.98);
  transition: transform 0.2s;
}

.contact-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 14px;
  font-weight: 600;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.contact-value {
  flex: 1;
  font-size: 14px;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.contacts-tip {
  text-align: center;
  font-size: 12px;
  color: #999;
  margin-top: 24rpx;
}

/* 文本省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
