/* pages/project/project.wxss */
.project-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 项目头部 */
.project-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 40rpx;
  text-align: center;
  color: #fff;
}

.project-logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 24rpx;
  background: #fff;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.project-name {
  font-size: 24px;
  font-weight: 700;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 信息区域 */
.info-section {
  padding: 32rpx;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.info-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.info-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-item.copyable {
  cursor: pointer;
  transition: all 0.3s;
}

.info-item.copyable:active {
  background: #f5f5f5;
  transform: scale(0.98);
}

.info-icon {
  font-size: 24px;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.info-content {
  flex: 1;
  overflow: hidden;
}

.info-label {
  font-size: 12px;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 14px;
  color: #333;
  word-break: break-all;
}

.info-copy {
  flex-shrink: 0;
  margin-left: 16rpx;
  animation: pulse 2s ease-in-out infinite;
}

.copy-icon {
  font-size: 20px;
  opacity: 0.7;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.7;
  }
  50% {
    opacity: 1;
  }
}

.info-tip {
  text-align: center;
  font-size: 12px;
  color: #999;
  margin-top: 24rpx;
}
