/* pages/category/category.wxss */
.category-container {
  display: flex;
  height: 100vh;
  background: #f5f5f5;
  /* 防止横向滚动 */
  overflow-x: hidden;
}

/* 翅膀扇动动画 - 逼真版本 */
@keyframes flap-left {
  0% {
    transform: translateX(-15rpx) translateY(-8rpx) rotate(-15deg) scaleY(1) scaleX(1);
    opacity: 0.85;
  }
  25% {
    transform: translateX(-18rpx) translateY(-12rpx) rotate(-22deg) scaleY(0.9) scaleX(1.1);
    opacity: 0.9;
  }
  50% {
    transform: translateX(-20rpx) translateY(-18rpx) rotate(-30deg) scaleY(0.7) scaleX(1.2);
    opacity: 1;
  }
  75% {
    transform: translateX(-18rpx) translateY(-12rpx) rotate(-22deg) scaleY(0.9) scaleX(1.1);
    opacity: 0.9;
  }
  100% {
    transform: translateX(-15rpx) translateY(-8rpx) rotate(-15deg) scaleY(1) scaleX(1);
    opacity: 0.85;
  }
}

@keyframes flap-right {
  0% {
    transform: translateX(15rpx) translateY(-8rpx) rotate(15deg) scaleY(1) scaleX(1);
    opacity: 0.85;
  }
  25% {
    transform: translateX(18rpx) translateY(-12rpx) rotate(22deg) scaleY(0.9) scaleX(1.1);
    opacity: 0.9;
  }
  50% {
    transform: translateX(20rpx) translateY(-18rpx) rotate(30deg) scaleY(0.7) scaleX(1.2);
    opacity: 1;
  }
  75% {
    transform: translateX(18rpx) translateY(-12rpx) rotate(22deg) scaleY(0.9) scaleX(1.1);
    opacity: 0.9;
  }
  100% {
    transform: translateX(15rpx) translateY(-8rpx) rotate(15deg) scaleY(1) scaleX(1);
    opacity: 0.85;
  }
}

/* 羽毛飘落效果 */
@keyframes feather-float {
  0%, 100% {
    transform: translateY(0) translateX(0) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 0.6;
  }
  50% {
    transform: translateY(20rpx) translateX(5rpx) rotate(10deg);
    opacity: 0.3;
  }
  90% {
    opacity: 0.1;
  }
  100% {
    transform: translateY(40rpx) translateX(-5rpx) rotate(-5deg);
    opacity: 0;
  }
}

/* 左侧分类列表 */
.category-sidebar {
  width: 200rpx;
  background: #fff;
  border-right: 1rpx solid #f0f0f0;
  /* 避免伪元素撑出容器造成横向滚动 */
  overflow: hidden;
}

.category-list {
  padding: 20rpx 0;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx 16rpx;
  position: relative;
  transition: all 0.3s;
  min-height: 100rpx;
  box-sizing: border-box;
}

/* 左翅膀 - 外层 */
.category-item.active::before {
  content: '';
  position: absolute;
  left: -12rpx;
  top: 50%;
  margin-top: -30rpx; /* 翅膀高度的一半，确保垂直居中 */
  width: 50rpx;
  height: 60rpx;
  background: linear-gradient(135deg,
    rgba(102, 126, 234, 0.9) 0%,
    rgba(118, 75, 162, 0.85) 50%,
    rgba(102, 126, 234, 0.7) 100%
  );
  border-radius: 50% 0 0 50% / 60% 0 0 60%;
  transform-origin: right center;
  animation: flap-left 1.2s cubic-bezier(0.45, 0.05, 0.55, 0.95) infinite;
  box-shadow:
    0 4rpx 16rpx rgba(102, 126, 234, 0.5),
    inset -5rpx 0 10rpx rgba(255, 255, 255, 0.3);
  filter: blur(0.5rpx);
}

/* 右翅膀 - 外层 */
.category-item.active::after {
  content: '';
  position: absolute;
  right: -12rpx;
  top: 50%;
  margin-top: -30rpx; /* 翅膀高度的一半，确保垂直居中 */
  width: 50rpx;
  height: 60rpx;
  background: linear-gradient(225deg,
    rgba(102, 126, 234, 0.9) 0%,
    rgba(118, 75, 162, 0.85) 50%,
    rgba(102, 126, 234, 0.7) 100%
  );
  border-radius: 0 50% 50% 0 / 0 60% 60% 0;
  transform-origin: left center;
  animation: flap-right 1.2s cubic-bezier(0.45, 0.05, 0.55, 0.95) infinite;
  box-shadow:
    0 4rpx 16rpx rgba(102, 126, 234, 0.5),
    inset 5rpx 0 10rpx rgba(255, 255, 255, 0.3);
  filter: blur(0.5rpx);
}

.category-item.active {
  background: linear-gradient(135deg, #f5f5ff 0%, #fff5ff 100%);
  /* 移除 scale 变化，避免布局变形 */
}

.category-name {
  font-size: 14px;
  color: #666;
  text-align: center;
  transition: all 0.3s;
  position: relative;
  z-index: 1;
  word-break: break-all;
  max-width: 160rpx;
  line-height: 1.5;
}

.category-item.active .category-name {
  color: #667eea;
  font-weight: 600;
  font-size: 15px;
}

/* 右侧文章列表 */
.posts-content {
  flex: 1;
  height: 100vh;
  /* 防止 flex 子项溢出 */
  min-width: 0;
  /* 防止横向滚动 */
  overflow-x: hidden;
}

.posts-list {
  padding: 20rpx;
  box-sizing: border-box;
}

.post-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  /* 避免内容撑出 */
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
}

.post-item:active {
  transform: scale(0.98);
  transition: transform 0.2s;
}

.post-thumbnail {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.post-body {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* 允许在 flex 布局中收缩，避免文本撑出 */
  min-width: 0;
}

.post-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  /* 防止长链接或长单词撑破布局 */
  word-break: break-all;
}

.post-excerpt {
  font-size: 13px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.post-meta {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 64px;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 14px;
  color: #999;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 14px;
}

.loading-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 13px;
}

.no-more {
  text-align: center;
  padding: 20rpx;
  color: #ccc;
  font-size: 13px;
}

.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 14px;
}
