/* pages/category/category.wxss */
.category-container {
  display: flex;
  height: 100vh;
  background: #f5f5f5;
}

/* 翅膀扇动动画 */
@keyframes flap-left {
  0%, 100% {
    transform: translateX(-15rpx) translateY(-10rpx) rotate(-20deg) scaleY(1);
  }
  50% {
    transform: translateX(-15rpx) translateY(-15rpx) rotate(-25deg) scaleY(0.8);
  }
}

@keyframes flap-right {
  0%, 100% {
    transform: translateX(15rpx) translateY(-10rpx) rotate(20deg) scaleY(1);
  }
  50% {
    transform: translateX(15rpx) translateY(-15rpx) rotate(25deg) scaleY(0.8);
  }
}

/* 左侧分类列表 */
.category-sidebar {
  width: 200rpx;
  background: #fff;
  border-right: 1rpx solid #f0f0f0;
}

.category-list {
  padding: 20rpx 0;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx 16rpx;
  position: relative;
  transition: all 0.3s;
}

/* 左翅膀 */
.category-item.active::before {
  content: '';
  position: absolute;
  left: -10rpx;
  top: 50%;
  width: 40rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50% 0 0 50%;
  opacity: 0.8;
  transform-origin: right center;
  animation: flap-left 1s ease-in-out infinite;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

/* 右翅膀 */
.category-item.active::after {
  content: '';
  position: absolute;
  right: -10rpx;
  top: 50%;
  width: 40rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 50% 50% 0;
  opacity: 0.8;
  transform-origin: left center;
  animation: flap-right 1s ease-in-out infinite;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.category-item.active {
  background: linear-gradient(135deg, #f5f5ff 0%, #fff5ff 100%);
  transform: scale(1.05);
}

.category-name {
  font-size: 14px;
  color: #666;
  text-align: center;
  transition: all 0.3s;
  position: relative;
  z-index: 1;
}

.category-item.active .category-name {
  color: #667eea;
  font-weight: 600;
  font-size: 15px;
}

/* 右侧文章列表 */
.posts-content {
  flex: 1;
  height: 100vh;
}

.posts-list {
  padding: 20rpx;
}

.post-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.post-item:active {
  transform: scale(0.98);
  transition: transform 0.2s;
}

.post-thumbnail {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.post-body {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.post-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.post-excerpt {
  font-size: 13px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.post-meta {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 64px;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 14px;
  color: #999;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 14px;
}

.loading-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 13px;
}

.no-more {
  text-align: center;
  padding: 20rpx;
  color: #ccc;
  font-size: 13px;
}

.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 14px;
}
