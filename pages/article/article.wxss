/* ==================== 阅读设置面板 ==================== */
.settings-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.settings-panel.show {
  opacity: 1;
  visibility: visible;
}

.settings-content {
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 32rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.settings-panel.show .settings-content {
  transform: translateY(0);
}

.settings-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.settings-title {
  font-size: 18px;
  font-weight: 700;
  color: #333;
}

.settings-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
  font-size: 20px;
  color: #999;
  transition: all 0.3s;
}

.settings-close:active {
  background: #e0e0e0;
}

.settings-section {
  margin-bottom: 40rpx;
}

.settings-label {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.settings-options {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.settings-option {
  flex: 1;
  min-width: 100rpx;
  padding: 20rpx 24rpx;
  text-align: center;
  background: #f5f5f5;
  border: 2rpx solid transparent;
  border-radius: 12rpx;
  font-size: 14px;
  color: #666;
  transition: all 0.3s;
}

.settings-option:active {
  transform: scale(0.95);
}

.settings-option.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: transparent;
  color: #fff;
  font-weight: 600;
}

.settings-option.theme-option {
  border: 2rpx solid #e0e0e0;
}

.settings-option.theme-option.active {
  border-color: #667eea;
  border-width: 3rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.settings-reset {
  margin-top: 40rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.reset-btn {
  width: 100%;
  padding: 24rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 15px;
  color: #999;
  transition: all 0.3s;
}

.reset-btn:active {
  background: #e0e0e0;
}

