/* pages/home/home.wxss */
.home-container {
  padding-bottom: 20rpx;
}

/* 通用区块 */
.section {
  margin-bottom: 24rpx;
}

.section-header {
  padding: 24rpx 32rpx 16rpx;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

/* 推荐文章区域 */
.featured-section {
  background: #fff;
}

.featured-swiper {
  width: 100%;
  height: 400rpx;
}

.featured-item {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.featured-image {
  width: 100%;
  height: 100%;
  filter: brightness(0.7);
}

.featured-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx 32rpx 32rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  color: #fff;
}

.featured-title {
  font-size: 20px;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 分类区域 */
.categories-section {
  background: #fff;
}

.categories-scroll {
  width: 100%;
  white-space: nowrap;
}

.categories-list {
  display: inline-flex;
  padding: 0 32rpx 24rpx;
  gap: 24rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 160rpx;
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  color: #fff;
  transition: all 0.3s ease;
}

/* 根据文章数量的不同渐变色样式 */
.category-item.style-1 {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  box-shadow: 0 8rpx 24rpx rgba(168, 237, 234, 0.3);
}

.category-item.style-2 {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.3);
}

.category-item.style-3 {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.category-item.style-4 {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  box-shadow: 0 8rpx 24rpx rgba(240, 147, 251, 0.3);
}

.category-item.style-5 {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.3);
}

.category-item:active {
  transform: scale(0.95);
  transition: transform 0.2s;
}

.category-name {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.category-count {
  font-size: 13px;
  opacity: 0.9;
}

/* 文章列表（瀑布流） */
.posts-section {
  padding: 0 16rpx;
}

.waterfall-container {
  display: flex;
  gap: 16rpx;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.post-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.post-card:active {
  transform: scale(0.98);
  transition: transform 0.2s;
}

.post-thumbnail {
  width: 100%;
  height: 300rpx;
}

.post-content {
  padding: 24rpx;
}

.post-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.post-excerpt {
  font-size: 13px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.post-meta {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #999;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 14px;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #ccc;
  font-size: 13px;
}

.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
  font-size: 14px;
}
