/* pages/home/home.wxss */
.home-container {
  padding-bottom: 20rpx;
}

/* 通用区块 */
.section {
  margin-bottom: 24rpx;
}

.section-header {
  padding: 24rpx 32rpx 16rpx;
}

.section-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

/* 推荐文章区域 */
.featured-section {
  background: #fff;
}

.featured-swiper {
  width: 100%;
  height: 400rpx;
}

.featured-item {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.featured-image {
  width: 100%;
  height: 100%;
  filter: brightness(0.7);
}

.featured-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx 32rpx 32rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  color: #fff;
}

.featured-title {
  font-size: 20px;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 分类区域 */
.categories-section {
  background: #fff;
}

.categories-scroll {
  width: 100%;
  white-space: nowrap;
}

.categories-list {
  display: inline-flex;
  padding: 0 32rpx 24rpx;
  gap: 24rpx;
}

.category-card {
  display: inline-flex;
  flex-direction: column;
  width: 200rpx;
}

.category-card:active {
  transform: scale(0.95);
  transition: transform 0.2s;
}

/* 背景图片区域 */
.category-bg {
  width: 200rpx;
  height: 140rpx;
  border-radius: 16rpx;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 背景图上的半透明遮罩 */
.category-bg::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

/* 中间分类名称 */
.category-name-overlay {
  position: relative;
  z-index: 2;
  font-size: 16px;
  font-weight: 700;
  color: #fff;
  text-align: center;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
  padding: 0 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 180rpx;
}

/* 左下角文章数量徽章 */
.category-count-badge {
  position: absolute;
  bottom: 12rpx;
  left: 12rpx;
  z-index: 2;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-size: 11px;
  font-weight: 600;
  backdrop-filter: blur(4px);
}

/* 文章列表 */
.posts-section {
  padding: 0 32rpx;
}

.posts-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.post-item {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.post-item:active {
  transform: scale(0.98);
  transition: transform 0.2s;
}

/* 左侧缩略图 */
.post-thumb {
  width: 240rpx;
  height: 180rpx;
  flex-shrink: 0;
}

/* 右侧内容 */
.post-info {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.post-title {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

.post-excerpt {
  font-size: 12px;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.post-meta {
  display: flex;
  align-items: center;
  font-size: 11px;
  color: #999;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 14px;
}

.no-more {
  text-align: center;
  padding: 40rpx;
  color: #ccc;
  font-size: 13px;
}

.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
  font-size: 14px;
}
